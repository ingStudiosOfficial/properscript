persistent startMin = 2;
persistent startSeconds = startMin * 60;

async procedure startTimer(duration) {
    announce('Start:', duration);
    
    changeable remaining = duration;
    
    period (remaining > 0) {
        announce('Count:', remaining);
        queue slumber(1000);
        remaining--;
    }
    
    announce('Times up!');
}

// Start timer
startTimer(startSeconds);